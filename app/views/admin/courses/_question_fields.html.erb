<div class="fields">
  <p>
    <%= f.label :content, "Question" %>
    <%= f.hidden_field :_destroy %>
    <%= link_to_remove_fields "<span class=\"glyphicon glyphicon glyphicon-trash\" aria-hidden=\"true\"></span>".html_safe, f, "remove_fields(this)" %><br />
    <%= f.text_area :content, rows: 2 %>
  </p>
    <div class="options">
      <%= f.fields_for :options do |builder| %>
        <%= render 'option_fields', f: builder %>
      <% end %>
    </div>
</div>
