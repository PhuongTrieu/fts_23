<% if user_signed_in? %>
  <h1><%= @examination.course.name %></h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for([:admin, @examination]) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <%= f.hidden_field :status, value: "Checked" %>
        <%= f.fields_for :answers do |builder| %>
          <%= render 'answer_fields', f: builder %>
        <% end %>
        <div class="my-group-button ">
          <% if f.object.status == "Submited" %>
            <%= f.submit "Check", class: "btn btn-primary" %>
            <%= link_to "Cancel", :back, class: "btn btn-primary" %>
          <% else %>
            <%= link_to "Cancel", :back, class: "btn btn-primary" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
