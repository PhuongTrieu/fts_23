<% provide(:title, @user.name) %>
<div class="container">
  <div class="row">
    <aside class="col-md-6 col-md-offset-3">
      <section class="user_info">
        <h1>
          <%= gravatar_for @user %>
          Name: <%= @user.name %><br />
          Email: <%= @user.email %><br />
          Role: <%= @user.role %>
        </h1>
      </section>
    </aside>
  </div>
</div>
<%= link_to "Back", :back, class: "glyphicon glyphicon-step-backward" %>
