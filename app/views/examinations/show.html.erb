<div>
  <span><%= @examination.created_at %></span>
  <div style="float: right;position:fixed;top:55px;right:200px;">
    Time left:
    <span id="getting-started" data-id-exam="<%= @examination.id %>" data-time="<%= Time.zone.now() %>">
    </span>
  </div>
</div>
<h2><%= @examination.course.name %></h2>
<% if @examination.status == "Checked" %>
Download:
<%= link_to "CSV", examination_path(format: "csv") %><br>
<% end %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@examination) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.hidden_field :status, value: "Submited" %>
      <%= f.fields_for :answers do |builder| %>
        <% if @examination.status == "Checked" %>
          <%= render 'answer_fields_checked', f: builder %>
        <% else %>
          <%= render 'answer_fields', f: builder %>
        <% end %>
      <% end %>
      <p><%= f.submit "Submit", class: "btn btn-primary", id: 'exam-btn-submit' %></p>
    <% end %>
  </div>
</div>

<%= javascript_include_tag :show_examination %>
